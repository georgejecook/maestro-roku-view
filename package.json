{
  "name": "maestro-roku-view",
  "version": "0.2.1",
  "description": "A development platform for building roku channels in brighterscript. View Library",
  "directories": {
    "doc": "docs"
  },
  "files": [
    "dist/**/!(manifest)*"
  ],
  "dependencies": {
    "log": "file:../maestro-roku-log",
    "mc": "file:../maestro-roku-core"
  },
  "devDependencies": {
    "brighterscript": "^0.15.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/georgejecook/maestro-roku-view.git"
  },
  "keywords": [
    "ropm",
    "brightscript",
    "mvvm",
    "framework",
    "fun"
  ],
  "author": "George Cook",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/georgejecook/maestro-roku-view/issues"
  },
  "homepage": "https://github.com/georgejecook/maestro-roku-view#readme",
  "ts-node": {
    "transpileOnly": true,
    "compileOptions": {
      "incremental": true,
      "allowJs": false
    }
  },
  "ropm": {
    "rootDir": "src",
    "packageRootDir": "dist"
  },
  "scripts": {
    "build": "npx bsc",
    "test": "cd tests && ropm install && bsc"
  }
}
